@using h5Todo.Controllers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using h5Todo.Models
@model h5Todo.Models.Todo
@{
    ViewData["Title"] = "EditTodo page";
}

@if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
{
    <div>
        @if (ViewBag.Todo != null)
        {
            <p>Todo with Id: @ViewBag.Todo.TodoId</p>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="@ViewBag.Todo.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="@ViewBag.Todo.Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsDone" class="control-label"></label>
                    <input type="checkbox" asp-for="IsDone" class="form-control" value="true"/>
                    <span asp-validation-for="IsDone" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none">
                    <label asp-for="TodoId" class="control-label"></label>
                    <input asp-for="TodoId" class="form-control" placeholder="@ViewBag.Todo.TodoId" />
                    <span asp-validation-for="TodoId" class="text-danger"></span>
                </div>
                <h3>@ViewBag.Message</h3>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
}
